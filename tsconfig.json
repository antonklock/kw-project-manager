{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["types/*"]
    },
    // "typeRoots": ["./node_modules/@types", "./typings", "./renderer.d.ts"]
  },
  "include": ["src/**/*", "types/types.d.ts"],
}
